.cart .cart_address_btn button {
  margin: 10rpx;
}
.cart .cart_address_info {
  display: flex;
  padding: 14rpx;
}
.cart .cart_address_info .user_info {
  flex: 4;
}
.cart .cart_address_info .user_tel {
  flex: 2;
  text-align: right;
}
.cart .cart_name {
  padding: 10rpx;
  color: var(--themeColor);
  font-weight: 600;
  border-bottom: 6rpx solid currentColor;
}
.cart .cart_goodsinfo {
  display: flex;
  padding: 10rpx;
  border-bottom: 2rpx solid #ccc;
}
.cart .cart_goodsinfo .goods_checkbox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .cart_goodsinfo .goods_image {
  flex: 2;
  padding: 0 20rpx;
}
.cart .cart_goodsinfo .goods_image image {
  width: 80%;
}
.cart .cart_goodsinfo .goods_deiail {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart .cart_goodsinfo .goods_deiail .goods_deiail_name {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart .cart_goodsinfo .goods_deiail .goods_deiail_btm {
  display: flex;
  justify-content: space-between;
}
.cart .cart_goodsinfo .goods_deiail .goods_deiail_btm .goods_detail_price {
  color: var(--themeColor);
}
.cart .cart_goodsinfo .goods_deiail .goods_deiail_btm .goods_detail_numchnage {
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .cart_goodsinfo .goods_deiail .goods_deiail_btm .goods_detail_numchnage text {
  padding: 0 10rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-top: 2rpx solid #ccc;
  height: 88rpx;
  display: flex;
  font-size: 34rpx;
}
.footer .footer_checkbox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 30rpx;
}
.footer .footer_total {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.footer .footer_total .footer_total_top text {
  color: var(--themeColor);
}
.footer .footer_total .footer_total_bottom {
  font-size: 30rpx;
}
.footer .footer_buy {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: #fff;
}
